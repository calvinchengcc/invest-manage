<h1>Address #<%= @address.id %></h1>
<span class="pagenav">
  <%= link_to 'Edit', edit_address_path(@address) %>
</span>

<p>
  <strong>Street Address:</strong>
  <%= @address.street_address %>
</p>

<p>
  <strong>City:</strong>
  <%= @address.city %>
</p>

<p>
  <strong>Country:</strong>
  <%= @address.country %>
</p>

<p>
  <strong>Postal code:</strong>
  <%= @address.postal_code %>
</p>

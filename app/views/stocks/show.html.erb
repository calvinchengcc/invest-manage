<h1><%= @stock.name %></h1>
<span class="pagenav">
  <%= link_to 'Edit', edit_stock_path(@stock) %>
</span>

<p>
  <strong>Symbol:</strong>
  <%= @stock.symbol %>
</p>

<p>
  <strong>Exchange:</strong>
  <%= @stock.exchange %>
</p>

<p>
  <strong>Price:</strong>
  <%= @stock.current_price %>
</p>

<p>
  <strong>Change:</strong>
  <%= @stock.current_change %> (<%= @stock.current_change_percent %>)
</p>

<p>
  <table>
    <% if @stock.historical_price_10d.empty? %>
      No data available.
    <% else %>
      <tr>
        <th>Closing price</th>
        <th>Date</th>
      </tr>
      <%= render(partial: 'historical_price',
                 collection: @stock.historical_price_10d,
                 as: :historical_price)%>
    <% end %>
  </table>
</p>

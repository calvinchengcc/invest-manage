<h1>Stocks</h1>
<span class="pagenav">
  <%= link_to 'New Stock', new_stock_path %>
</span>

<table>
  <thead>
    <tr>
      <th>Symbol</th>
      <th>Exchange</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.order(:symbol).each do |stock| %>
      <tr>
        <td><%= stock.symbol %></td>
        <td><%= stock.exchange.code %></td>
        <td><%= stock.name %></td>
        <td class="actions">
          <%= link_to 'Show', stock %>
          <%= link_to 'Edit', edit_stock_path(stock) %>
          <%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Users</h1>
<span class="pagenav">
  <%= link_to 'User Stats', stats_users_path %>
  <%= link_to 'New User', new_user_path %>
</span>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Phone</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.phone %></td>
        <td><%= link_to user.address.to_s, user.address %></td>
        <td class="actions">
          <%= link_to 'Show', user %>
          <%= link_to 'Edit', edit_user_path(user) %>
          <%= link_to 'Destroy', user, method: :delete, data: {
            confirm: "Are you sure?\n\nNote: If #{user.name} currently owns or manages any portfolios, the deletion will fail." } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p id="notice"><%= notice %></p>

<h1>Listing Holdings</h1>

<table>
  <thead>
    <tr>
      <th>Holding</th>
      <th>Portfolio</th>
      <th>Symbol</th>
      <th>Exchange</th>
      <th>Num shares</th>
      <th>Datetime</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holdings.each do |holding| %>
      <tr>
        <td><%= holding.holding_id %></td>
        <td><%= holding.portfolio_id %></td>
        <td><%= holding.symbol %></td>
        <td><%= holding.exchange %></td>
        <td><%= holding.num_shares %></td>
        <td><%= holding.datetime %></td>
        <td><%= holding.price %></td>
        <td><%= link_to 'Show', holding %></td>
        <td><%= link_to 'Edit', edit_holding_path(holding) %></td>
        <td><%= link_to 'Destroy', holding, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


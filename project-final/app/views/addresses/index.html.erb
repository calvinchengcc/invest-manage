<h1>Addresses</h1>
<span class="pagenav">
  <%= link_to 'New Address', new_address_path %>
</span>

<table>
  <thead>
    <tr>
      <th>Street Address</th>
      <th>City</th>
      <th>Country</th>
      <th>Postal code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street_address %></td>
        <td><%= address.city %></td>
        <td><%= address.country %></td>
        <td><%= address.postal_code %></td>
        <td class="actions">
          <%= link_to 'Show', address %>
          <%= link_to 'Edit', edit_address_path(address) %>
          <%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

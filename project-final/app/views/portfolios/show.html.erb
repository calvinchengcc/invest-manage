<p>
  <strong>Purpose:</strong>
  <%= @portfolio.purpose %>
</p>

<p>
  <strong>Creation date:</strong>
  <%= @portfolio.creation_date %>
</p>

<p>
  <strong>Owner:</strong>
  <%= link_to "#{@portfolio.owner.name}: #{@portfolio.owner_id}", @portfolio.owner %>
</p>

<p>
  <strong>Manager:</strong>
  <%= link_to "#{@portfolio.manager.name}: #{@portfolio.manager_id}", @portfolio.manager %>
</p>

<p>
  <table>
    <tr>
      <td>Principal</td>
      <td>$<%= @portfolio.principal %></td>
    </tr>
    <tr>
      <td>Cash</td>
      <td>$<%= @portfolio.cash %></td>
    </tr>
    <tr>
      <td>Value of holdings</td>
      <td>$<%= @portfolio.current_value_of_holdings %></td>
    </tr>
    <tr>
      <td>Total value of portfolio</td>
      <td>$<%= @portfolio.current_value %></td>
    </tr>
    <tr>
      <td>Profit/Loss</td>
      <td>$<%= @portfolio.profit_loss %></td>
    </tr>
    <tr>
      <td>Annualized return</td>
      <td><%= @portfolio.annualized_return %>%</td>
    </tr>
    <tr>
      <td>Total return</td>
      <td><%= @portfolio.total_return %>%</td>
    </tr>
    <tr>
      <td>Holdings</td>
      <td>
        <ul>
          <% @portfolio.holdings.each do |holding| %>
            <li><%= link_to holding.id, holding %></li>
          <% end %>
        </ul>
      </td>
    </tr>
    <tr>
      <td>Companies represented</td>
      <td>
        <ul>
          <% @portfolio.companies_represented.each do |company| %>
            <li><%= company %></li>
          <% end %>
        </ul>
      </td>
    </tr>
  </table>
</p>

<%= link_to 'Edit', edit_portfolio_path(@portfolio) %> |
<%= link_to 'Back', portfolios_path %>

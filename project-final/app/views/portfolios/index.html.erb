<p id="notice"><%= notice %></p>

<h1>Listing Portfolios</h1>

<table>
  <thead>
    <tr>
      <th>Purpose</th>
      <th>Creation date</th>
      <th>Principal</th>
      <th>Cash</th>
      <th>Owner</th>
      <th>Manager</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolios.each do |portfolio| %>
      <tr>
        <td><%= portfolio.purpose %></td>
        <td><%= portfolio.creation_date %></td>
        <td><%= portfolio.principal %></td>
        <td><%= portfolio.cash %></td>
        <td><%= portfolio.owner_id %></td>
        <td><%= portfolio.manager_id %></td>
        <td><%= link_to 'Show', portfolio %></td>
        <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
        <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

